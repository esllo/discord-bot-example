{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "target": "esnext",
    "outDir": "./dist/",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}